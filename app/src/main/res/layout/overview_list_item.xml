<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/slot_name_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            tools:text="Compilers Lab" />

        <TextView
            android:id="@+id/slot_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:text="10:30" />
    </LinearLayout>

    <TextView
        android:id="@+id/slot_place_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/eight_margin"
        android:padding="@dimen/eight_margin"
        android:textColor="@color/colorSecondaryTex"
        android:textSize="14sp"
        tools:text="Hall 7" />

</LinearLayout>
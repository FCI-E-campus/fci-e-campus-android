<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin"
    android:orientation="vertical"
    tools:context="eg.edu.cu.fci.ecampus.fci_e_campus.activities.ForumPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forum_post_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Lexical Analyzer"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forum_post_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5 Nov"
            android:textColor="@color/colorSecondaryTex"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/forum_post_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In computer science qw e tr sd asd cxv vcbfdg fdg asd asdhasdhoi jiojjasdjojaosjd asdj ija sdjio jaisasojd any of it maybe can beat some text, lexical analysis, lexing wqeqw or tokenization is the process of converting a sequence of characters into a sequence of tokens. asd asd asd asd asd asd asd "
        android:textColor="@color/colorSecondaryTex"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forum_post_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="by. ahmedotto"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/forum_post_answered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

    </LinearLayout>


    <ListView
        android:id="@+id/forum_post_comments_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_marginTop="@dimen/eight_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/forum_post_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fadeScrollbars="false"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:minLines="1"
            android:scrollbars="vertical"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/send_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_send_comment" />
    </LinearLayout>
</LinearLayout>
